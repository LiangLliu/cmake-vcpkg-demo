if(CONFIG_ENABLE_PACKAGING)
  set(CPACK_PACKAGE_NAME ${PROJECT_NAME})
  set(CPACK_PACKAGE_DESCRIPTION_SUMMARY "C++ Template Project")
  set(CPACK_PACKAGE_VENDOR "LiangLliu")
  set(CPACK_PACKAGE_VERSION ${PROJECT_VERSION})
  set(CPACK_PACKAGE_CONTACT "LiangLliu")
  set(CPACK_PACKAGE_VERSION_MAJOR ${PROJECT_MAJOR_VERSION})
  set(CPACK_PACKAGE_VERSION_MINOR ${PROJECT_MINOR_VERSION})
  set(CPACK_PACKAGE_VERSION_PATCH ${PROJECT_PATCH_VERSION})

  set(CPACK_PACKAGE_FILE_NAME ${PROJECT_NAME})
  if(CMAKE_SYSTEM_NAME)
    set(CPACK_PACKAGE_FILE_NAME ${CPACK_PACKAGE_FILE_NAME}-${CMAKE_SYSTEM_NAME})
  endif()
  if(CMAKE_SYSTEM_PROCESSOR)
    set(CPACK_PACKAGE_FILE_NAME ${CPACK_PACKAGE_FILE_NAME}-${CMAKE_SYSTEM_PROCESSOR})
  endif()
  if(CMAKE_PRESET_NAME)
    set(CPACK_PACKAGE_FILE_NAME ${CPACK_PACKAGE_FILE_NAME}-${CMAKE_PRESET_NAME})
  endif()
  if(CONFIG_ENABLE_FULL_PACKAGING)
    set(CPACK_PACKAGE_FILE_NAME ${CPACK_PACKAGE_FILE_NAME}-fully)
  endif()

  set(CPACK_INSTALL_CMAKE_PROJECTS "${CMAKE_BINARY_DIR};${PROJECT_NAME};ALL;/")
  set(CPACK_VERBATIM_VARIABLES ON)

  if(CONFIG_ENABLE_FULL_PACKAGING)
    set(CPACK_GENERATOR "TGZ")
  endif()

  if(CMAKE_SYSTEM_NAME MATCHES "Linux")
    string(APPEND CPACK_GENERATOR ";DEB")

    set(CPACK_DEBIAN_PACKAGE_MAINTAINER "LiangLliu")
    set(CPACK_DEBIAN_PACKAGE_NAME ${CPACK_PACKAGE_FILE_NAME})
    set(CPACK_BINARY_DEB ON)

    set(CPACK_DEBIAN_FILE_NAME DEB-DEFAULT)
    set(CPACK_COMPONENTS_GROUPING ALL_COMPONENTS_IN_ONE)
    set(CPACK_DEB_COMPONENT_INSTALL ON)
    set(CPACK_DEBIAN_ENABLE_COMPONENT_DEPENDS ON)
  endif()

  set(CPACK_SET_DESTDIR ON)
  set(CPACK_PACKAGING_INSTALL_PREFIX /tmp/${CMAKE_INSTALL_PREFIX})

  include(CPack)

endif()
